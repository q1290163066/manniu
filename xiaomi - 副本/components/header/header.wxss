/* pages/components/header.wxss */
.header{
  width: 690rpx;
  padding: 18rpx 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
}
.header_img{
  width: 160rpx;
  height: 64rpx;
}
.search_box{
  font-size: 24rpx;
  border: 2rpx solid #aaaaaa;
  border-radius: 56rpx; 
  width: 100%;
  height: 60rpx;
  padding-left:20rpx;
  display: flex;
  justify-content: space-between;
  background: #fff;
}
.search_box-input{
  width: 100%;
  height: 60rpx;
  padding-left: 20rpx;
}
.search_btn{
  background: url('https://jiagy.zerosky.top/resources/style/system/front/wap/jgy/images/gray-search.png') center/36rpx 36rpx no-repeat;
  width: 40rpx;
  height: 60rpx;
}