.goodsSwiper_img{
  width: 100%;
  height: 100%;
}
/*menu*/
.menu-coutainer{
  height: 360rpx;
  margin: 0 30rpx;
  display: flex;
  flex-wrap: wrap;
  box-shadow: 0px 0px 4px 0px #ccc;
  border-radius: 20rpx;
}
.li{
  width: 25%;
  text-align: center;
  margin-top: 20rpx;
}
.img{
  width: 88rpx;
  height: 88rpx;
  border-radius: 30%;
  border: 1px solid red;
}
.text{
  color: #888;
  font-size: 12px;
}
.h2{
  text-align: center;
  font-weight: 900;
  color: #424242;
  font-size: 32rpx;
  margin: 56rpx 0;
}
.wrapper{
  margin-top: -100rpx;
