.bgi{
  height: 380rpx;
  background-color: #f6df5b;
}
.hotSearch{
  margin: 0 30rpx;
}
.title{
  font-size: 13px;
}
.content {
  margin-left:10rpx ;
  display: inline-block;
  border-radius: 40rpx;
  padding: 4rpx 16rpx;
  background-color: #faefad;
  font-size: 12px;
  color: #424242;
}
.box{
  position: relative;
  top: -100rpx;
}
