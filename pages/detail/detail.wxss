/* 选项卡 */
.topTabSwiper>view {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
  font-size: 30rpx;
}
 .tab{
   display: inline-block;
   width: 80rpx;
 }
.topTabSwiper{
  zoom: 1;
  display: flex;
}
 
.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}
 
.tabBorer {
  border-bottom: 1px solid #469bf8;
}
 /* 轮播 */
.swiper {
  padding: 50rpx 22rpx 0 22rpx;
}
.swiper_con {
  overflow: hidden;
  height:134rpx ;
  border-bottom: 1px solid #eee;
}
.left{
  height: 100%;
  float: left;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.right{
  float: right;
  font-size: 30rpx;
  line-height: 134rpx;
}
.text{
  font-size: 32rpx;
}
.time{
  font-size: 24rpx;
  color: #aaa;
}